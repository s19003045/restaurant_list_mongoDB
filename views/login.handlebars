<div class="row">
  <div class="col-md-6 m-auto login-form">
    <div class="card card-body mt-4 ">
      <h2 class="text-center mb-4">Login</h2>
      <!-- 引用 messages 這個 partial view -->
      {{> messages}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" class="form-control" id="email" name="email" placeholder="Enter name" value="">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="text" class="form-control" id="password" name="password" placeholder="Enter password" value="">
        </div>
        <button class="btn btn-primary btn-block mb-3" type="submit">Login</button>


        <a href="/auth/facebook" class="btn btn-info btn-block mb-3">Facebook Login</a>



        <p class="lead mt-5">No account ? <a href="/users/register">Register</a></p>
      </form>
    </div>
  </div>
</div>