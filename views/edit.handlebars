<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">

  <div class="row mb-5">
    <div class="col-12 col-md-10 mx-auto">

      {{!-- restaurant detail --}}
      <form action="">
        <p class="mb-4">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" value="{{restaurant.category}}">
        </p>

        <p class="mb-4">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" value="{{restaurant.location}}">
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-4">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" value="{{restaurant.phone}}">
        </p>

        <p class="mb-4">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            餐廳描述：
          </span>
          <textarea cols="100" row="10">{{restaurant.description}}</textarea>
        </p>

        <p class="mb-4">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            圖片網址：
          </span>
          <input type="text" value="{{restaurant.image}}">
        </p>
        <button type="submit">Save</button>
        <button><a href="/restaurants/{{{restaurant.id}}}">Cancel</a></button>
      </form>

    </div>
  </div>
</div>