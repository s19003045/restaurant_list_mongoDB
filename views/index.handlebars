<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" name="search" class="form-control" placeholder="輸入餐廳、分類、地點"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
        <div class="btn-group btn-group-toggle mt-2" data-toggle="buttons">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">排序依據</span>
          </div>
          <label class="btn btn-primary {{#ifEquals 
            'name' query.key}}active{{/ifEquals}}">
            <input type="radio" name="key" id="option1" autocomplete="off" value="name" {{#ifEquals 
            'name' query.key}}checked{{/ifEquals}}>依餐廳名稱
          </label>
          <label class="btn btn-primary {{#ifEquals 
            'rating' query.key}}active{{/ifEquals}}">
            <input type="radio" name="key" id="option2" autocomplete="off" value="rating" {{#ifEquals 
            'rating' query.key}}checked{{/ifEquals}}>依評價
          </label>
          <label class="btn btn-primary {{#ifEquals 
            'category' query.key}}active{{/ifEquals}}">
            <input type="radio" name="key" id="option3" autocomplete="off" value="category" {{#ifEquals 
            'category' query.key}}checked{{/ifEquals}}>依餐廳類別
          </label>
          <label class="btn btn-primary {{#ifEquals 
            'location' query.key}}active{{/ifEquals}}">
            <input type="radio" name="key" id="option3" autocomplete="off" value="location" {{#ifEquals 
            'location' query.key}}checked{{/ifEquals}}>依餐廳地點
          </label>
        </div>
        <hr>
        <div class="btn-group btn-group-toggle mt-0" data-toggle="buttons">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">排列順序</span>
          </div>
          <label class="btn btn-primary {{#ifEquals 
            'asc' query.order}}active{{/ifEquals}}">
            <input type="radio" name="order" id="option1" autocomplete="off" value="asc" {{#ifEquals 
                      'asc' query.order}}checked{{/ifEquals}}>升
          </label>
          <label class="btn btn-primary {{#ifEquals 
            'desc' query.order}}active{{/ifEquals}}">
            <input type="radio" name="order" id="option1" autocomplete="off" value="desc" {{#ifEquals 
                                  'desc' query.order}}checked{{/ifEquals}}>降
          </label>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class=" container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{!-- Add icon --}}
      <div class="btn-group mb-3">
        <a class="btn btn-info mr-4" href="/restaurants/new" role="button">Add restaurant</a>
      </div>

      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <div class="restaurant-category mb-1">
                {{this.location}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>